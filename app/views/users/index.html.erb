<style type="text/css">
td {text-align:center}
</style>

<h1>Listing users</h1>

<table>
  <tr>
    <th>User name</th>
    <th>Email</th>
    <th>Bio</th>
    <th>City</th>
    <th>State</th>
    <th>Interests</th>
    <th>Expertises</th>
    <th>Institutions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <td><%= user.email %></td>
    <td><%= user.bio %></td>
    <td><%= user.city %></td>
    <td><%= user.state %></td>
    <td style="width:200px" ><%= collection_display user.interests %></td>
    <td style="width:200px" ><%= collection_display user.expertises %></td>
    <td style="width:200px" ><%= collection_display user.institutions %></td>
    <td><%= link_to 'Show', user %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
